#!/usr/bin/gnuplot

# data.csv setup
set xdata time
set timefmt '%Y-%m-%d'
set datafile separator ','

# graph setup
set grid
set xlabel 'Date'
set ylabel 'Weight (lbs)'
set format x '%m-%d'

# plot it
plot './data/data.csv' using 1:3 title 'readings' with points lw 2 lc rgb '#ff9933', \
     '' using 1:3 title 'approximation' smooth bezier with lines lw 2 lc rgb '#0099ff'
